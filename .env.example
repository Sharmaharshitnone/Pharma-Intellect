# Pharma-Intellect Environment Configuration
# ==================================================

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-api-key-here

# LLM Model Selection
# Options: gpt-3.5-turbo, gpt-4o-mini, gpt-4o
LLM_MODEL=gpt-3.5-turbo

# API Configuration
# PubMed API settings
PUBMED_MAX_RESULTS=100
PUBMED_KEYWORDS=oncology drug discovery,autoimmune disorders treatment,risperidone clinical trials,drug repurposing,phase 2 clinical trials

# ClinicalTrials.gov API settings
CLINICAL_TRIALS_MAX_RESULTS=100
CLINICAL_TRIALS_CONDITIONS=Oncology,Autoimmune Disorders,Hypertension,Risperidone,Phase 2

# Vector Database Configuration
CHROMA_DB_PATH=./chroma_db
VECTOR_STORE_NAME=pharma_intellect_knowledge_base

# Embedding Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2

# RAG Configuration
NUM_SOURCES_TO_RETRIEVE=5
CHUNK_SIZE=300
CHUNK_OVERLAP=50

# Streamlit Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=true

# Logging Configuration
LOG_LEVEL=INFO
DEBUG_MODE=false
